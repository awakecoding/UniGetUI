<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="UniGetUI.Interface.Pages.AboutPages.ThirdPartyLicenses"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UniGetUI.Interface.Pages.AboutPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:widgets="using:UniGetUI.Interface.Widgets"
    mc:Ignorable="d">

    <ScrollViewer
        Margin="0,10,0,0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        CornerRadius="8">
        <StackPanel
            Padding="0,0,0,0"
            Orientation="Vertical"
            Spacing="4">
            <widgets:TranslatedTextBlock
                FontFamily="Segoe UI Variable Display"
                FontSize="24"
                FontWeight="Bold"
                Text="WingetUI License" />
            <widgets:TranslatedTextBlock Text="Using WingetUI implies the acceptation of the MIT License" />
            <TextBlock />
            <widgets:TranslatedTextBlock
                FontFamily="Segoe UI Variable Display"
                FontSize="24"
                FontWeight="Bold"
                Text="Third-party licenses" />
            <widgets:TranslatedTextBlock Text="WingetUI uses the following libraries. Without them, WingetUI wouldn't have been possible." />
            <ListView ItemsSource="{Binding Licenses}" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:LibraryLicense">
                        <Grid
                            Margin="0"
                            Padding="0"
                            ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="240" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{Binding Name}" />
                            <HyperlinkButton
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="{Binding License}"
                                NavigateUri="{Binding LicenseURL}" />
                            <HyperlinkButton
                                Grid.Column="2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Content="{Binding HomepageText}"
                                NavigateUri="{Binding HomepageUrl}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </ScrollViewer>
</UserControl>
