<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="UniGetUI.Interface.Pages.AboutPages.Contributors"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UniGetUI.Core.Classes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:widgets="using:UniGetUI.Interface.Widgets"
    mc:Ignorable="d">

    <ScrollViewer
        Margin="0,10,0,0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        CornerRadius="8">
        <StackPanel Orientation="Vertical">
            <widgets:TranslatedTextBlock
                FontFamily="Segoe UI Variable Display"
                FontSize="24"
                FontWeight="Bold"
                Text="Contributors" />
            <widgets:TranslatedTextBlock Text="WingetUI wouldn't have been possible without the help of the contributors. Thank you all ðŸ¥³" />
            <TextBlock />
            <ListBox ItemsSource="{Binding ContributorList}" SelectionMode="Single" Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="local:Person">
                        <Grid
                            Margin="0"
                           >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                Height="32"
                                Background="{DynamicResource ApplicationPageBackgroundThemeBrush}"
                                CornerRadius="16">
                                <Image
                                    Width="32"
                                    Height="32"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Source="{Binding ProfilePicture}" />
                            </Border>
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{Binding Name}" />
                            <HyperlinkButton
                                Grid.Column="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                NavigateUri="{Binding GitHubUrl}"
                                IsVisible="{Binding HasGitHubProfile}">
                                <widgets:TranslatedTextBlock Text="View GitHub Profile" />
                            </HyperlinkButton>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
